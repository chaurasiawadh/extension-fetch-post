{
  "manifest_version": 3,
  "name": "Linkdln Jobseekers",
  "version": "1.0.0",
  "description": "Extract LinkedIn hiring posts, manage leads, and generate AI-powered job application emails in one place.",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://script.google.com/*",
    "https://*.googleusercontent.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ]
    }
  ]
}